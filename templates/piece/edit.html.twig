                        <div class = "tab-content" id="editPiece-{{ piece.id }}">
                            <div class ="tab-pane fade show active" id="edit-info-{{ piece.id }}" role="tabpanel" aria-labelledby="edit-info-tab-{{ piece.id }}">
                                <div class="row">
                                    {{ form_row(forms[piece.id].name)}}
                                </div>
                                <div class="row mt-3">
                                    {{ form_row(forms[piece.id].libelle)}}
                                </div>
                                <div class="row mt-3">
                                    {{ form_row(forms[piece.id].intermediaire, { 'attr': {'checked': piece.intermediaire ? 'checked' : false }}) }}
                                </div>
                                <div class="row mt-3">
                                    {{ form_row(forms[piece.id].prix_achat) }}
                                </div>
                                <div class="row mt-3">
                                    {{ form_row(forms[piece.id].prix_vente) }}
                                </div>
                                <div class="row mt-3">
                                    {{ form_row(forms[piece.id].stock) }}
                                </div>  
                            </div>
                            <div class="tab-pane fade show" id="edit-compo-{{ piece.id }}" role="tabpanel" aria-labelledby="edit-compo-tab-{{ piece.id }}">
                                <div class="row">
                                    {{ form_row(forms[piece.id].fabrique, { 'attr': { 'class': 'fabrique-checkbox', 'data-target': 'edit-fields-' ~ piece.id, 'checked': piece.fabrique ? 'checked' : false  } }) }}
                                </div>
                                <div id="edit-fields-{{ piece.id }}" class="d-none">
                                    <div class="row mt-3">
                                        {{ form_row(forms[piece.id].gamme) }}
                                    </div>
                                    <div class="row mt-3">
                                        <div id="editCompositionPiece-{{ piece.id }}" data-prototype="{{ form_widget(forms[piece.id].compositions.vars.prototype)|e('html_attr') }}">
                                            <div class="mb-4 align-items-center">
                                                {{ form_label(forms[piece.id].compositions) }}
                                            </div>
                                            <span>
                                                {{ form_widget(forms[piece.id].compositions) }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Retour</button>
                        <button type="submit" class="btn btn-primary">Valider</button>
                    </div>
                    {{ form_end(forms[piece.id])}}
                </div>
            </div>
        </div>