                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel-{{ piece.id }}">Modifier la pi√®ce : {{piece.name}}.</h5>
                    </div>
                    <div class="modal_nav">
                        <ul class="nav nav-tabs" id="editTab-{{ piece.id }}" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="edit-info-tab-{{ piece.id }}" data-toggle="tab" href="#edit-info-{{ piece.id }}" role="tab" aria-controls="edit-info-{{ piece.id }}" aria-selected="true">Infos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="edit-compo-tab-{{ piece.id }}" data-toggle="tab" href="#edit-compo-{{ piece.id }}" role="tab" aria-controls="edit-compo-{{ piece.id }}" aria-selected="false">Compositions</a>
