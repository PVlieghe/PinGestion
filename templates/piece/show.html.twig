{% extends 'base.html.twig' %}

{% block title %}Piece{% endblock %}

{% block body %}
    <h1>Piece</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ piece.name }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ piece.libelle }}</td>
            </tr>
            <tr>
                <th>Prix_vente</th>
                <td>{{ piece.prixVente }}</td>
            </tr>
            <tr>
                <th>Prix_achat</th>
                <td>{{ piece.prixAchat }}</td>
            </tr>
            <tr>
                <th>Intermediaire</th>
                <td>{{ piece.intermediaire ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Fabrique</th>
                <td>{{ piece.fabrique ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ piece.stock }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_piece_index') }}">back to list</a>

    <a href="{{ path('app_piece_edit', {'id': piece.id}) }}">edit</a>

    {{ include('piece/_delete_form.html.twig') }}
{% endblock %}
